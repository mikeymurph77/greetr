<div id="login">
  <%= form_for @user do |form| %>
    <%= render "errors", target: @user %>
    <div>
      <%= form.label :username %>
      <%= form.text_field :username %>
    </div>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.label :password %>
      <%= form.password_field :password %>
    </div>
    <div>
      <%= form.submit "Sign up" %>
    </div>
  <% end %>
  <div class="switch">Already have an account...well <%= link_to "Sign In", [:new, :session] %>!</div>
</div>
